---
import NextIcon from '../icons/Next.astro'
import AstroIcon from '../icons/Astro.astro'
import TailwindIcon from '../icons/Tailwind.astro'
import PhpIcon from '../icons/Php.astro'
import Mysql from '../icons/Mysql.astro'
import Eye from '../icons/Eye.astro'


const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  PHP : { 
    name: "PHP", 
    class: 'bg-violet-600 text-white', 
    icon: PhpIcon
  }, 
  ASTRO : {
    name : 'Astro', 
    class: 'bg-black text-white',
    icon: AstroIcon
  }, 
  MYSQL : {
    name : 'Mysql', 
    class: 'bg-white text-black', 
    icon: Mysql
  }
}


const PROJECTS = [ 
    { 
        title: 'Turismo Sultepec ', 
        description: 'Lider de desarrollo en un sitio web para fomentar el turismo en el municipio de Sultepec - Edomex.',
        link: 'https://sultepec-turistico.000webhostapp.com/', 
        github: '',
        image: '/img/works/work1.webp',
        tags: [TAGS.PHP, TAGS.MYSQL]
    },
    { 
        title: 'NVS Latinos cleaning ', 
        description: 'Landing page para servicios de limpieza en hogares de Reino Unido ðŸ‡¬ðŸ‡§.',
        link: 'https://cleaning-services-nine.vercel.app/', 
        github: '#',
        image: '/img/works/work2.webp',
        tags: [TAGS.NEXT, TAGS.TAILWIND]
    },
    { 
        title: 'Hamma Beads', 
        description: 'Landing page  para para publicitar un negocio de piezas echas con la tecnica Hamma Beads.', 
        link: 'https://www.hammabeads.shop/',
        image: '/img/works/work3.webp', 
        tags: [TAGS.ASTRO, TAGS.TAILWIND] 

    }
]


---


{ 
PROJECTS.map(({ title, description, tags, image, link})=> (
 <article class="">
   <div class='md:w-96'>
        <h3 class="text-2xl font-bold neon-white">{title}</h3>
    <p class="text-base text-gray-400">{description}</p> 

    <ul class='flex text-base gap-x-2 items-center mb-5 mt-1'>
        {tags.map((tag) => (
            <li class="mt-2" >
              <span
                class={`flex items-center gap-x-2 rounded-full py-1 px-2 text-xs ${tag.class} font-semibold `}
              >
                <tag.icon class='size-3' />
                {tag.name}
              </span>    
            </li>      
          ))}
          <li>
            <a  class="rounded-full mt-2
                  flex justify-center items-center
                   bg-white/10 hover:scale-110 
                  transition cursor-pointer text-xs py-1 px-2" href={link} target="_blank">
                   <Eye/> Demo
              </a>  
        </li>
    </ul> 
    <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video  cursor-pointer transition hover:scale-110  "
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
    </div>
</article>

))
}