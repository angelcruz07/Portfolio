---
import ExperienceItem from '../ui/ExperienceItem.astro'

import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const t = getI18N({ currentLocale })

const EXPERIENCE = [ 
    {
        id: 1,
        date: t.WORK_EXPERIENCE.ITEMS[1].DATE,
        title: t.WORK_EXPERIENCE.ITEMS[1].TITLE,
        description: t.WORK_EXPERIENCE.ITEMS[1].DESCRIPTION,
        link: 'https://drive.google.com/file/d/1TiAFnvGNDUAc5yR3pX8CpxOQbnwlrBz6/view?usp=sharing'
    },
    {
        id: 2, 
        date: t.WORK_EXPERIENCE.ITEMS[2].DATE,
        title: t.WORK_EXPERIENCE.ITEMS[2].TITLE,
        description: t.WORK_EXPERIENCE.ITEMS[2].DESCRIPTION, 
        link: 'https://www.codeverse.mx/'
    },
    {
        id: 3,
        date: t.WORK_EXPERIENCE.ITEMS[3].DATE,
        title: t.WORK_EXPERIENCE.ITEMS[3].TITLE,
        description: t.WORK_EXPERIENCE.ITEMS[3].DESCRIPTION ,
        link: ''
    }
]
---

<ol class="ml-3 relative border-s border-gray-200 dark:border-gray-700">                  
    {
    EXPERIENCE.map((experience) => (
    <ExperienceItem key={experience.id} {...experience} />
        ))}
</ol>
