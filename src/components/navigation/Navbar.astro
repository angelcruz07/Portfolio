---
import Link from './Link.astro'

import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="flex justify-center  w-full">
   <nav class="flex flex-row gap-x-3 md:gap-x-5 g-white bg-opacity-50 backdrop-blur-md p-2 rounded-lg fixed z-50 font-semibold">
     <Link href="/">{t('nav.home')}</Link>
     <Link href="#experiencia">{t('nav.experience')}</Link>
     <Link href="#proyectos">{t('nav.projects')}</Link>
     <Link href="#sobre-mi">{t('nav.about')}</Link>
   </nav>
</header>