---
import NextIcon from '../icons/Next.astro'
import TailwindIcon from '../icons/Tailwind.astro'
import Eye from '../icons/Eye.astro'

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
}


const PROJECTS = [ 
    { 
        title: 'Mind Flow', 
        description: 'Proyecto resultado de un hackathon de 48 horas en el cual trabaje en equipo junto a dos personas mas y logramos crear Mind Flow una aplicaciÃ³n innovadora destinada a cultivar la paz mental y la serenidad en la vida cotidiana',
        link: 'https://mindflow-nine.vercel.app/', 
        github: '#',
        image: '/img/projects/mindflow.webp',
        tags: [TAGS.NEXT, TAGS.TAILWIND]
    },
]
---


{ 
PROJECTS.map(({ title, description, tags, image, link})=> (
 <article class="">
   <div class='md:w-96'>
        <h3 class="text-2xl font-bold neon-white">{title}</h3>
    <p class="text-base text-gray-400">{description}</p> 

    <ul class='flex text-base gap-x-2 items-center mb-5 mt-1'>
        {tags.map((tag) => (
            <li class="mt-2" >
              <span
                class={`flex items-center gap-x-2 rounded-full py-1 px-2 text-xs ${tag.class} font-semibold `}
              >
                <tag.icon class='size-3' />
                {tag.name}
              </span>    
            </li>      
          ))}
          <li>
            <a  class="rounded-full mt-2
                  flex justify-center items-center
                   bg-white/10 hover:scale-110 
                  transition cursor-pointer text-xs py-1 px-2" href={link} target="_blank">
                   <Eye/> Demo
              </a>  
        </li>
    </ul> 
    <a href={link} target="_blank">
    <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video  cursor-pointer transition hover:scale-110  "
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        </a>
    </div>
</article>

))
}